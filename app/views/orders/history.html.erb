  <%#= @current_order.email %>
<!--</p>-->

<p>
  <strong>Pay type:</strong>
  <%= @current_order.pay_type %>
</p>

<p>
  <strong>Ordered at:</strong>
  <%= @current_order.created_at %>
</p>

